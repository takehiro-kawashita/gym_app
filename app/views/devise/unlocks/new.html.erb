<div class="container text-center">
  <h2 style="font-size:2.5rem">Resend unlock instructions</h2>
  
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field field-text">
      <%= f.email_field :email,:placeholder => "e-mail",autofocus: true, autocomplete: "email",class:"user-form" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Resend unlock instructions",class:"btn btn-secondary user-form"%>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
  