<div class="container text-center">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field field-text">
      <%= f.email_field :email,:placeholder =>"e-mail",autofocus: true, autocomplete: "email",class:"user-form" %>
    </div>
    <div class="field field-text">
      <%= f.password_field :password,:placeholder =>"Password",autocomplete: "current-password",class:"user-form" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in",class: "btn btn-primary user-form" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

