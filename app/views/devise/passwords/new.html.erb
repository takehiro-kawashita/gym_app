<div class="container text-center">
  <h2 style="font-size:2.5rem">Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field field-text">
      <%= f.email_field :email,:placeholder => "e-mail", autofocus: true, autocomplete: "email" ,class:"user-form"%>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password",class:"btn btn-secondary user-form" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>  
  