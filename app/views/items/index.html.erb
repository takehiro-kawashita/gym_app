<div class="container">
    <h1>商品一覧</h1>
    
    
     <table class="table table-striped">
        <thead>
          <tr>
            <th>商品名</th>
            <th>値段(税抜)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= link_to '詳細', item_path(item),class:"btn btn-outline-info"%>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="btn-margin">
          <%= link_to 'マイページ',gym_apps_path,class:"btn btn-primary"%>
      </div>
</div>
