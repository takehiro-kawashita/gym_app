<div class="container">
  <div class="page-top">
    <h1>商品一覧</h1>
      <%= link_to 'マイページ',gym_apps_path,class:"btn btn-secondary"%>
  </div>
    
     <div class="card-body">検索
      <%= form_with method: "get", local: true do |f| %>
      <div class="form-row mb-3 mt-2">
        <div class="col">
          <%= f.text_field "name", placeholder: "商品名", class: "form-control" %>
        </div>
        <div class="col">
          <%= f.text_field "price", placeholder: "値段", class: "form-control" %>
        </div>
        <div class="col button-info">
          <%= f.submit "検索",class:"btn btn-primary"%>
        </div>
      </div>
      <% end %>
    </div>  
     <table class="table-striped">
        <thead>
          <tr>
            <th>商品名</th>
            <th>値段(税抜)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.price.to_s(:delimited,delimiter:',') %></td>
              <td><%= link_to '商品詳細', item_path(item),class:"link-info"%>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
