<div class="container management-login">
    <%= form_with url: management_authenticate_path,local: true do |f| %>
        <div class="form-group login-group">
            <%= f.password_field :code,placeholder: "Authorization code", class: "form-control login-form" %>
            <%= f.submit "Login",class: "btn-authorization"%>
        </div>
    <% end %>    
</div>

<style>
    body{
        background-color:#C0C0C0;
        background-image:url("<%= asset_path('management-login-1.jpg')%>");
        background-repeat:no-repeat;
        background-position:center center;
        background-attachment:fixed;
        background-size:cover;
    }
</style>
