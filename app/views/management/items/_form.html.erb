        <td><%= form.number_field :stock,class:"form-control input-form" %></td>
      </tr>
      <tr>
        <td>概要</td>
        <td><%= form.text_area :description,class:"form-control memo input-form" %></td>
      </tr>      
    </tbody>
  </table>
    
    <%= form.file_field :image,class:"management-image" %><br> 
