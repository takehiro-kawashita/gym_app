    <thead>
      <tr>
        <th>入力項目</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= form.text_field :name,class:"form-control input-form" %></td>
      </tr>
      <tr>
        <td>値段（税抜）</td>
        <td><%= form.number_field :price,class:"form-control input-form" %></td>
      </tr>
