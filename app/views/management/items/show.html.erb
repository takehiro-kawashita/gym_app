<div class="container">

  <p id="notice"><%= notice %></p>
    <div class="btn-margin">
    <%= link_to '編集', edit_management_item_path(@item),class:"btn btn-info"%>
    <%= link_to '戻る', management_items_path,class:"btn btn-secondary" %>
  </div>
  <div class="content">
    
    <div class="show-image">
      <%= image_tag @item.image %><br>    
    </div>
    <div class="description">
      <h1><%= @item.name%></h1>
      <p>値段:<span class="item-price">￥<%= @item.price %></span>円</p>
      <p>在庫:<span class="item-stock"><%= @item.stock %></span></p>
      <p>概要:<span class="item-description"><%= @item.description %></span></p>
    </div>  
  </div>
</div>

