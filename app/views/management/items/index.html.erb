<h1>商品一覧</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>値段(税抜)</th>
      <th>在庫</th>
      <th>概要</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.stock %></td>
        <td><%= item.description %></td>
        <td><%= link_to '詳細', management_item_path(item) %></td>
        <td><%= link_to '編集', edit_management_item_path(item) %></td>
        <td><%= link_to '削除', management_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

