<div class="container">
    <div class="page-top">
        <h1>会員詳細<%= link_to "【編集】",edit_management_user_path,class:"link-edit ml-3" %></h1>        
    </div>
    <div class="member-info">
            <div class="page-top mb-3">
        <%= link_to "戻る",management_users_path,class:"btn btn-secondary" %>                            
    </div>
        <table class="mb-5 table-striped">
            <tbody>
                <tr>
                    <th>基本情報</th>
                    <th></th>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @user.email%></td>
                </tr>
                <tr>
                    <td>名前</td>    
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                    <td>所持ポイント</td>
                    <td><%= @user.point %></td>
                </tr>
                <tr>
                    <td>生年月日</td>
                    <td><%= @user.birthday.strftime("%Y/%m/%d") %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @user.address %></td>
                </tr>
                <tr>
                    <td>性別</td>
                    <td><%= @user.sex %></td>
                </tr>
            </tbody>
        </table>
        <div class="page-top">
            <h1>予約レッスン</h1>
        </div>
        <table class="table-striped mt-3">
            <thead>
                <tr>
                    <th>レッスン名</th>
                    <th>実施日時</th>
                    <th>区分</th>
                </tr>
            </thead>
            <tbody>
                <% @user.reservations.each do |res| %>
                    <tr>
                        <td><%= res.lesson.title %></td>
                        <td><%= res.lesson.started_at.strftime("%Y/%m/%d %H:%M") %></td>
                        <td><%= res.lesson.category %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
</div>

<style>
    .member-info{
        padding:2rem;
    }
    
    .member-info th{
        font-size:1.3rem;
    }
</style>